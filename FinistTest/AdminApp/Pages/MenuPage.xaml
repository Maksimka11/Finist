<Page x:Class="AdminApp.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdminApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="btnUsers" Height="50" Click="btnUsers_Click" Content="Пользователи"/>
        <Button x:Name="btnBankAccount" Height="50" Click="btnBankAccount_Click" Grid.Column="1" Content="Счета"/>
        <Button x:Name="btnCard" Height="50" Click="btnCard_Click" Grid.Column="2" Content="Карты"/>
        <Button x:Name="btnTransactions" Click="btnTransactions_Click" Height="50" Grid.Row="1" Grid.Column="0" Content="Переводы"/>
        <Button x:Name="btnFavorites" Click="btnFavorites_Click" Height="50" Grid.Row="2" Grid.Column="1" Content="Избранное"/>
    </Grid>
</Page>
